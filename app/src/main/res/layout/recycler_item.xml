<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoRestoran"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/shadow_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/fotoRestoran"
            android:src="@drawable/bottom_shadow" />

        <TextView
            android:id="@+id/restoranName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fotoRestoran"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="10dp"
            android:text="Restaurant_Name"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/restoranDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restoranName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="5dp"
            android:text="Average Price" />

        <TextView
            android:id="@+id/restoranStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restoranDesc"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="6dp"
            android:text="Rating" />

        <TextView
            android:id="@+id/restoranIsDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="6dp"
            android:layout_below="@id/restoranDesc"
            android:gravity="end"
            android:layout_toRightOf="@+id/restoranStar"
            android:text="Delivering" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>